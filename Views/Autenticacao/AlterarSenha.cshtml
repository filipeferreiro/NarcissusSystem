                    <img src="~/img/creme.png" alt="imagem dos favoritos" />
                    <div class="favorito-info">
                        <h3>Título do meu favorito</h3>
                        <p>R$ 120,00</p>
                        <a href="">excluir</a>
                    </div><!--favorito-info-->
                </div><!--favorito-single-->
                <hr />
                <a href="#" class="encerra-compra">Ver todos <i class="fa-solid fa-box"></i></a>
            </div><!--favoritos-->
        </div><!--perfil-wraper-->
    </div><!--container-->
</session><!--perfil-->
